{
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/build"
            }
        },
        {
            "src": "workwonders/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/workwonders/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/client/$1"
        }
    ]
}